{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "task g++",
            "type": "shell",
            "command": "g++",
            "args": [
                // Ask msbuild to generate full paths for file names.
                "-g",
                "${file}",
                "-o",
              "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
             "problemMatcher": [
                 "$gcc"
             ],
             "group": "build"
        }
    ]
}